import { SaveOptions } from 'mongoose';
import {
	createSchema,
	ExtractDoc,
	ExtractProps,
	Type,
	typedModel
} from 'ts-mongoose';
import { ModelFields, createDocument as mongoDocument } from './template/model';

export const ${NAME}Schema = createSchema({},
	{
		timestamps: {
			createdAt: true,
			updatedAt: true
		}
	}
);

export const ${NAME} = typedModel('${NAME}', ${NAME}Schema, '${COLLECTION}', undefined, {
	createDocument
});

// ----- END OF FILE ----- //

type Document = ExtractDoc<typeof ${NAME}Schema>;
type Props = ExtractProps<typeof ${NAME}Schema>;

function createDocument(
	props: ModelFields<Props>,
	options?: SaveOptions
): Promise<Document>;

// eslint-disable-next-line no-redeclare
function createDocument(props: ModelFields<Props>, noSave: boolean): Document;

// eslint-disable-next-line no-redeclare
function createDocument(
	props: ModelFields<Props>,
	optionsOrSave: SaveOptions | boolean = true
): Promise<Document> | Document {
	return mongoDocument(${NAME}, props, optionsOrSave);
}
